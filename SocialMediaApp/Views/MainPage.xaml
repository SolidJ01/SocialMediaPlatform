<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SocialMediaApp.ViewModels"
             x:Class="SocialMediaApp.MainPage"
             x:DataType="viewmodel:FeedViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

                <Label Text="Imagine some posts here" />

            </VerticalStackLayout>
        </ScrollView>
        <Grid Grid.Row="1" BackgroundColor="DimGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="60" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="{Binding UserName}" Command="{Binding GoToProfileCommand}" FontSize="22" Margin="5" />
        </Grid>
    </Grid>

</ContentPage>
